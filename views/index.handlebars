<div class='container jumbotron text-center'>
    <h1>Order Up!</h1>
</div>

<div class='container'>

    <div class='row d-flex justify-content-center'>
        <div class='col-6 align-items-center'>
            <form class='create-form'>
                <div class='input-group mb-4'>
                    <input type='text' name='name' class='form-control' id='burgerNew' placeholder='Add Your Burger Here!' aria-label='Add Your Burger' aria-describedby='button-addon2'>
                    <div class='input-group-append'>
                        <button type='submit' class='btn' id='submitButton'>
                           <i class="fas fa-concierge-bell"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    <div class='row'>

        <div class='col-6 text-center'>
            <div class='card'>
                <h3 class='card-header text-center'>Burgers To Eat</h3>
                    <div class='card-body'>
                        <ul> 
                            {{#each burgers}}
                                {{#unless devoured}}
                                    {{> burgersFile/burgers-section devoured=false}}
                                {{/unless}}
                            {{/each}}
                        </ul>
                    </div>
            </div>
        </div>

        <div class='col-6 text-center'>
            <div class='card'>
                <h3 class='card-header text-center'>Devoured Burgers</h3>
                    <div class='card-body'>
                        <ul>
                            {{#each burgers}}
                                {{#if devoured}}
                                    {{> burgersFile/burgers-section devoured=true}}
                                {{/if}}
                            {{/each}}
                        </ul>
                    </div>
            </div>
        </div>

    </div>

</div>
